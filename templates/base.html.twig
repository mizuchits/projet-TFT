<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}PowerPixel
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{{ encore_entry_link_tags('app') }}
	</head>
	<body>
		<header>
			<nav class="container">
				<div class="header-logo">
					<img src="{{ asset('../assets/img/logo_jaune.png')}}" alt="Image du logo">
				</div>
				<ul>
					<li>
						<a href="{{ path("app_accueil") }}">Accueil</a>
                        {# <a href="{{ path("app_game") }}">Game</a>
                        <a href="{{ path("app_wait") }}">Wait</a> #}
					</li>
					{% if not app.user %}
						<li>
							<a href="{{ path("app_login") }}">Connexion</a>
						</li>
						<li>
							<a href="{{ path("app_register") }}">Inscription</a>
						</li>
					{% else %}
						<li>
							<a href="{{ path("app_logout") }}">Déconnexion</a>
						</li>
					{% endif %}
				</ul>
				<div class="menu-burger">
					<img class="icon-burger" src="{{ asset('../assets/img/space_jaune.png')}}" alt="Image du menu de navigation">
				</div>
			</nav>
		</header>

		{% block body %}{% endblock %}

		<footer>
			<section class="container">
				<div class="copy">
					<p>Copyright 2026 PowerPixel. Tous droits réservés.</p>
				</div>
			</section>
		</footer>
	</body>
</html>
